@model SystemViewModels.EmployeeManagement.HREmployeeFamilyDetailsViewModelList
@using PagedList.Mvc;

<div id="replacetarget">
    <div id="content" class="content">
        <div class="dataTables_wrapper">
            <div id="mask-container">
                <div id="mask"></div>
                <div class="table-responsive">
                    <table style="width: 100%;" aria-describedby="gbox_grid-table" role="grid" id="example" class="table table-bordered table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>आईडी</th>
                                <th>परिवारको सदस्यको पुरा नाम</th>
                                <th>परिवारको सदस्यको पुरा नाम(देवनागरी)</th>
                                <th>लिङ्ग</th>
                                <th>मोबाइल</th>
                                <th>ईमेल</th>
                                <th>सम्बन्ध</th>
                                <th class="text-center">वैवाहिक अवस्था</th>
                                <th>कार्य</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DBModelList)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <a class="blue">
                                            <i class="ace-icon fa fa-search-plus bigger-130">
                                                @item.HREmployeeName
                                            </i>
                                        </a>
                                    </td>
                                    <td>@item.HREmployeeNameNP</td>
                                    <td>@item.HREmployeeSex.HREmployeeSexTitle</td>
                                    <td>@item.MobileNumber</td>
                                    <td>@item.Email</td>
                                    <td>@item.HREmployeeRelationType.RelationType</td>
                                    <td> @item.HREmployeeMarital.HREmployeeMaritalTitle</td>
                                    <td class="ace-icon action-buttons">
                                        <a href="@Url.Action("_UpdateHREmployeeFamilyDetailsAsync",new { id=item.Id,pageNumber=Model.PageNumber,pageSize=Model.PageSize,orderingBy=Model.OrderingBy,orderingDirection=Model.OrderingDirection,searchKey=Model.SearchKey})" data-ajax-model="">
                                            <i class="ace-icon fa fa-pencil green bigger-150" aria-hidden="true" title="Edit"></i>
                                        </a>
                                        <a href="@Url.Action("_ReadHREmployeeFamilyDetailsAsync",new { id=item.Id,pageNumber=Model.PageNumber,pageSize=Model.PageSize,orderingBy=Model.OrderingBy,orderingDirection=Model.OrderingDirection,searchKey=Model.SearchKey})" data-ajax-model=""><i class="ace-icon fa fa-search-plus blue bigger-150" aria-hidden="true" title="View"></i></a>
                                        <a href="@Url.Action("_DeleteHREmployeeFamilyDetailsAsync",new { id=item.Id,pageNumber=Model.PageNumber,pageSize=Model.PageSize,orderingBy=Model.OrderingBy,orderingDirection=Model.OrderingDirection,searchKey=Model.SearchKey})" data-ajax-model=""><i class="ace-icon fa fa-trash-o red bigger-150" aria-hidden="true" title="Delete"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div aria-live="polite" role="status" id="example_info" class="dataTables_info">
                    <div class="row">
                        <div class="col-md-4">Showing @(Model.DBModelList.PageCount < Model.DBModelList.PageNumber ? 0 : Model.DBModelList.FirstItemOnPage) to @Model.DBModelList.LastItemOnPage of @Model.DBModelList.TotalItemCount entries in @Model.DBModelList.PageCount Pages</div>
                        <div class="col-md-8 dataTables_paginate paging_simple_numbers" id="example_paginate">@Html.PagedListPager(Model.DBModelList, page => Url.Action("_ListHREmployeeFamilyDetailsAsync", new { idHREmployee = Model.IdHREmployee, pageNumber = page, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection, searchKey = Model.SearchKey }))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




