@model SystemViewModels.EmployeeManagement.HREmployeeAddressViewModelList

<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <div class="nav-search" id="nav-search">
        <form class="form-search">
            <span class="input-icon">
                <a class="nav-search-input" href="~/@Model.BreadCrumbBaseURL/_PrintHREmployeeAddressAsync?idHREmployee=@Model.IdHREmployee" data-ajax-model="">
                    <i class="ace-icon fa fa-print nav-search-icon">Print</i>
                </a>
            </span>
            <span class="input-icon">
                <a class="nav-search-input" href="~/@Model.BreadCrumbBaseURL/_ExportHREmployeeAddressAsync?idHREmployee=@Model.IdHREmployee">
                    <i class="ace-icon fa fa-file-excel-o nav-search-icon">Export</i>
                </a>
            </span>
            <span class="input-icon">
                <a class="nav-search-input" href="#" id="Create_HREmployeeAddress">
                    <i class="ace-icon fa fa-plus  nav-search-icon">Create</i>
                </a>
            </span>
            <span class="input-icon">
                <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                <i class="ace-icon fa fa-search nav-search-icon"></i>
            </span>
        </form>
    </div><!-- /.nav-search -->
</div>
@{ Html.RenderPartial("_ListHREmployeeAddressAsync");}

<script type="text/javascript">
    $(function () {
        $.ajaxSetup({ cache: false });
        $('#Create_HREmployeeAddress').click(function (e) {
            var url;
            url = '/@Model.BreadCrumbBaseURL' + '/_CreateHREmployeeAddressAsync?idHREmployee=' +'@Model.IdHREmployee';
            $('#myModalContent').load(url, function () {
                $('#myModal').modal({
                    keyboard: true
                }, 'show');
                bindAjaxForm(this);
            });
            return false;
        });
    });
</script>



