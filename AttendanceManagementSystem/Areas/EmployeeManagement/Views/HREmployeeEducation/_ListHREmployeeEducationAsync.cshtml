@model SystemViewModels.EmployeeManagement.HREmployeeEducationViewModelList
@using PagedList.Mvc;

<div id="replacetarget">
    <div id="content" class="content">
        <div class="dataTables_wrapper">
            <div id="mask-container">
                <div id="mask"></div>
                <div class="table-responsive">
                    <table style="width: 100%;" aria-describedby="gbox_grid-table" role="grid" id="example" class="table table-bordered table-hover table-responsive">
                        <thead>
                            <tr>
                                <th class="ace-icon">आईडी</th>
                                <th class="ace-icon">डिग्री</th>
                                <th>कलेज </th>
                                <th>कलेजको ठेगाना</th>
                                <th>संकाय</th>
                                <th>स्कोर</th>
                                <th class="ace-icon">सुरूको मिति</th>
                                <th class="ace-icon">अन्तिम मिति</th>
                                <th class="ace-icon">डाउनलोड</th>
                                <th class="ace-icon">कार्य</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DBModelList)
                            {
                                <tr>
                                    <td class="ace-icon">
                                        <i class="fa bigger-100 badge badge-info">@item.Id</i>
                                    </td>
                                    <td class="ace-icon">
                                        <i class="fa bigger-110 badge badge-yellow">@item.HREmployeeEducationType.EducationType</i>
                                    </td>
                                    <td class="blue">
                                        <i class="fa bigger-120">@item.CollegeName</i>
                                    </td>
                                    <td class="blue">
                                        <i class="fa bigger-120">@item.CollegeAddress</i>
                                    </td>
                                    <td class="blue">
                                        <i class="fa bigger-120">@item.DegreeName</i>
                                    </td>
                                    <td class="ace-icon">
                                        <i class="fa bigger-110 badge badge-info">@item.Score</i>
                                    </td>
                                    <td class="ace-icon">
                                        <i class="fa bigger-110 badge badge-success">@(string.Format("{0:yyyy-MM-dd}", item.StartedDate.DateNp()))</i>
                                    </td>
                                    <td class="ace-icon">
                                        <i class="fa bigger-110 badge badge-danger">@(string.Format("{0:yyyy-MM-dd}", item.EndDate.DateNp()))</i>
                                    </td>
                                    <td class="ace-icon">
                                        <i class="fa bigger-110 badge badge-danger">
                                            <a href="/@Model.BreadCrumbController/DownloadDocFiles?id=FILE1">
                                                <i class="ace-icon fa fa-download green bigger-150" aria-hidden="true" title="Download"></i>
                                            </a>
                                        </i>
                                    </td>
                                    <td class="ace-icon action-buttons">
                                        <a href="@Url.Action("_UpdateHREmployeeEducationAsync",new { id=item.Id,pageNumber=Model.PageNumber,pageSize=Model.PageSize,orderingBy=Model.OrderingBy,orderingDirection=Model.OrderingDirection,searchKey=Model.SearchKey})" data-ajax-model="">
                                            <i class="ace-icon fa fa-pencil green bigger-150" aria-hidden="true" title="Edit"></i>
                                        </a>
                                        <a href="@Url.Action("_ReadHREmployeeEducationAsync",new { id=item.Id,pageNumber=Model.PageNumber,pageSize=Model.PageSize,orderingBy=Model.OrderingBy,orderingDirection=Model.OrderingDirection,searchKey=Model.SearchKey})" data-ajax-model=""><i class="ace-icon fa fa-search-plus blue bigger-150" aria-hidden="true" title="View"></i></a>
                                        <a href="@Url.Action("_DeleteHREmployeeEducationAsync",new { id=item.Id,pageNumber=Model.PageNumber,pageSize=Model.PageSize,orderingBy=Model.OrderingBy,orderingDirection=Model.OrderingDirection,searchKey=Model.SearchKey})" data-ajax-model=""><i class="ace-icon fa fa-trash-o red bigger-150" aria-hidden="true" title="Delete"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div aria-live="polite" role="status" id="example_info" class="dataTables_info">
                    <div class="row">
                        <div class="col-md-4">Showing @(Model.DBModelList.PageCount < Model.DBModelList.PageNumber ? 0 : Model.DBModelList.FirstItemOnPage) to @Model.DBModelList.LastItemOnPage of @Model.DBModelList.TotalItemCount entries in @Model.DBModelList.PageCount Pages</div>
                        <div class="col-md-8 dataTables_paginate paging_simple_numbers" id="example_paginate">@Html.PagedListPager(Model.DBModelList, page => Url.Action("_ListHREmployeeEducationAsync", new { idHREmployee = Model.IdHREmployee, pageNumber = page, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection, searchKey = Model.SearchKey }))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

