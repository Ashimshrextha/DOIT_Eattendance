@model SystemViewModels.EmployeeManagement.HREmployeeLeaveManagementViewModelList
@using PagedList.Mvc;
<div id="replacetarget">
    <div id="content" class="content">
        <div class="dataTables_wrapper">
            <div id="mask-container">
                <div id="mask"></div>
                <div class="table-responsive">
                    <table style="width: 100%;" aria-describedby="gbox_grid-table" role="grid" id="example" class="table table-bordered table-hover table-responsive">
                        <thead>
                            <tr>
                                <th class="text-center">आईडी</th>
                                <th class="text-center">बिदाको प्रकार</th>
                                <th class="text-center">बिदा वर्ष</th>
                                <th class="text-center">जम्मा बिदा</th>
                                <th class="ace-icon">कार्य</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DBModelList)
                            {
                            <tr>
                                <td class="ace-icon">
                                    <i class="fa bigger-110 badge badge-info">@item.Id</i>
                                </td>
                                <td class="ace-icon">
                                    <i class="ace-icon bigger-100 fa badge badge-yellow">@item.MasterLeaveTitle.LeaveTitleNP</i>
                                </td>
                                <td class="text-center">
                                    <i class="ace-icon fa badge badge-grey">@item.LeaveYearNP</i>
                                </td>
                                <td class="text-center">
                                    <i class="ace-icon fa badge badge-grey">@item.TotalLeave</i>
                                </td>
                                <td class="ace-icon action-buttons">
                                    <a href="@Url.Action("_UpdateHREmployeeLeaveManagementAsync", new { id = item.Id, pageNumber = Model.PageNumber, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection })" data-ajax-model="">
                                        <i class="ace-icon fa fa-pencil green bigger-150" aria-hidden="true" title="Edit"></i>
                                    </a>
                                    <a href="@Url.Action("_ReadHREmployeeLeaveManagementAsync",new { id=item.Id,pageNumber=Model.PageNumber,pageSize=Model.PageSize,orderingBy=Model.OrderingBy,orderingDirection=Model.OrderingDirection})" data-ajax-model=""><i class="ace-icon fa fa-search-plus blue bigger-150" aria-hidden="true" title="View"></i></a>
                                    <a href="@Url.Action("_DeleteHREmployeeLeaveManagementAsync", new { id = item.Id, pageNumber = Model.PageNumber, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection })" data-ajax-model=""><i class="ace-icon fa fa-trash-o red bigger-150" aria-hidden="true" title="Delete"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div aria-live="polite" role="status" id="example_info" class="dataTables_info">
                    <div class="row">
                        <div class="col-md-4">Showing @(Model.DBModelList.PageCount < Model.DBModelList.PageNumber ? 0 : Model.DBModelList.FirstItemOnPage) to @Model.DBModelList.LastItemOnPage of @Model.DBModelList.TotalItemCount entries in @Model.DBModelList.PageCount Pages</div>
                        <div class="col-md-8 dataTables_paginate paging_simple_numbers" id="example_paginate">@Html.PagedListPager(Model.DBModelList, page => Url.Action("_ListHRCompanyHREmployeeShiftRoasterAsync", new { idHREmployee = Model.IdHREmployee, pageNumber = page, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection, searchKey = Model.SearchKey }))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

