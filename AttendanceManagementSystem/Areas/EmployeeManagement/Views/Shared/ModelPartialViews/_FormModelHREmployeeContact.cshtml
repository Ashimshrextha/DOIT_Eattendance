@model SystemViewModels.EmployeeManagement.HREmployeeContactViewModel
<link href="~/Content/jasny-bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jasny-bootstrap.min.js"></script>
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/RequiredField.js"></script>

@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.DataModel.Id)
@Html.HiddenFor(model => model.DataModel.IdHREmployee)
@Html.HiddenFor(model => model.PageNumber)
@Html.HiddenFor(model => model.PageSize)
@Html.HiddenFor(model => model.OrderingBy)
@Html.HiddenFor(model => model.OrderingDirection)
@Html.HiddenFor(model => model.SearchKey)

<div class="row">
    
        <div class="col-md-12 col-sm-12 col-lg-12">
            <div class="col-md-12 col-sm-12 col-lg-12">
                <div class="form-group row">
                    <div class="col-md-3 col-sm-3 col-lg-3">
                        @Html.LabelFor(model => model.DataModel.IdContactType, new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.DataModel.IdContactType, new SelectList(Model.DDLContactType, "Key", "Value"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DataModel.IdContactType)
                    </div>
					<div class="col-md-3 col-sm-3 col-lg-3">
						@Html.LabelFor(model => model.DataModel.ContactNumber, new { @class = "control-label" })
						@Html.TextBoxFor(model => model.DataModel.ContactNumber, new { @class = "form-control" })
						@Html.ValidationMessageFor(model => model.DataModel.ContactNumber)
					</div>
					<div class="col-md-2 col-sm-2 col-lg-2">
						@Html.LabelFor(model => model.DataModel.IsActive, new { @class = "control-label col-md-12 col-sm-12 col-lg-12" })
						@Html.CheckBoxFor(model => model.DataModel.IsActive, new { @class = "BSswitch" })
						@Html.ValidationMessageFor(model => model.DataModel.IsActive)
					</div>
					<div class="col-md-2 col-sm-2 col-lg-2">
						@Html.LabelFor(model => model.DataModel.IsDefault, new { @class = "control-label col-md-12 col-sm-12 col-lg-12" })
						@Html.CheckBoxFor(model => model.DataModel.IsDefault, new { @class = "BSswitch" })
						@Html.ValidationMessageFor(model => model.DataModel.IsDefault)
					</div>
                </div>
            </div>
        </div>
</div>
