@model SystemViewModels.EmployeeManagement.HREmployeeLeaveHistoryViewModel
<link href="~/Content/jasny-bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jasny-bootstrap.min.js"></script>
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/RequiredField.js"></script>
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.LeaveAppliedModel.IdLeavehistory)
@Html.HiddenFor(model => model.LeaveAppliedModel.IdHREmployee)
@Html.HiddenFor(model => model.LeaveAppliedModel.IdHRCompany)
@Html.HiddenFor(model => model.LeaveAppliedModel.IdJob)
@Html.HiddenFor(model => model.PageNumber)
@Html.HiddenFor(model => model.PageSize)
@Html.HiddenFor(model => model.OrderingBy)
@Html.HiddenFor(model => model.OrderingDirection)
@Html.HiddenFor(model => model.SearchKey)



<div class="row">
    <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
        <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
            <fieldset disabled>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="panel-title row">
                            <div style="width:70px;" class="pull-left">
                                <img src="@Model.LeaveAppliedModel.ImageName" alt="@Model.LeaveAppliedModel.EmployeeName" height="70" width="70" style="border-radius:100%;" />
                            </div>
                            <div class="text-center">
                                <strong>बिदाको माग पत्र</strong>
                                <div class="space-6"></div>
                                <strong> बिदा माग गर्ने कर्मचारीले प्रयोग गर्ने</strong>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="form-group row">
                            <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.EmployeeName, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.EmployeeName, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.DesignationTitle, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.DesignationTitle, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.PositionStatusTitle, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.PositionStatusTitle, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.HRCompanyName, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.HRCompanyName, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.DivisionName, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.DivisionName, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.PISNumber, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.PISNumber, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.Email, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.Email, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.MobileNumber, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.MobileNumber, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 col-sm-4 col-lg-4 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.Gender, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.Gender, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

        </div>
        <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
            <fieldset disabled>
                <div class="panel panel-default">
                    <div class="panel-heading"><h4 class="panel-title">बिदा माग गर्ने</h4></div>
                    <div class="panel-body">
                        <div class="form-group row">
                            <div class="col-md-3 col-sm-6 col-lg-3 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.LeaveTitle, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.LeaveTitle, new { @class = "form-control" })
                            </div>
                            <div class="col-md-3 col-sm-6 col-lg-3 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.IsHalfDayCount, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.IsHalfDayCount, new { @class = "form-control" })
                            </div>
                            <div class="col-md-3 col-sm-6 col-lg-3 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.LeaveYearNP, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.LeaveYearNP, new { @class = "form-control" })
                            </div>
                            <div class="col-md-3 col-sm-6 col-lg-3 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.LeaveStatusType, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.LeaveStatusType, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 col-sm-6 col-lg-3 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.LeaveValidFromNP, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.LeaveValidFromNP, new { @class = "form-control" })
                            </div>
                            <div class="col-md-3 col-sm-6 col-lg-3 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.LeaveValidToNP, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.LeaveValidToNP, new { @class = "form-control" })
                            </div>
                            <div class="col-md-3 col-sm-6 col-lg-3 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.ApprovedOn, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.LeaveAppliedModel.ApprovedOn, new { @class = "form-control" })
                            </div>
                            <div class="col-md-3 col-sm-6 col-lg-3 col-xs-12">
                                @Html.LabelFor(model => model.LeaveAppliedModel.Document, new { @class = "control-label" })
                                <i class="fa fa-download">@Model.LeaveAppliedModel.Document</i>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h4 class="panel-title">बिदा स्वीकृत गर्ने</h4></div>
                <div class="panel-body">
                    <div class="form-group row">
                        <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
                            @Html.LabelFor(model => model.LeaveAppliedModel.LeaveReason, new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.LeaveAppliedModel.LeaveReason, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
                            @Html.LabelFor(model => model.LeaveAppliedModel.ApprovalRemark, new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.LeaveAppliedModel.ApprovalRemark, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
                            @Html.LabelFor(model => model.LeaveAppliedModel.IdApprovedBy, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.LeaveAppliedModel.ApprovedEmployeeName, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
                            @Html.LabelFor(model => model.LeaveAppliedModel.IdLeaveStatus, new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.LeaveAppliedModel.IdLeaveStatus, new SelectList(Model.DDLLeaveStatusType, "Key", "Value"), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
