@model SystemViewModels.EmployeeManagement.HREmployeeLeaveManagementViewModel
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/RequiredField.js"></script>
<script src="~/Scripts/CustomScript.js"></script>
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.DataModel.Id)
@Html.HiddenFor(model => model.PageNumber)
@Html.HiddenFor(model => model.PageSize)
@Html.HiddenFor(model => model.OrderingBy)
@Html.HiddenFor(model => model.OrderingDirection)
@Html.HiddenFor(model => model.SearchKey)

<div class="row">
    
    <div class="col-md-12 col-sm-12 col-lg-12">
        <div class="col-md-12 col-sm-12 col-lg-12">
            <div class="form-group row">
                <div class="col-md-4 col-sm-4 col-lg-4">
                    @Html.LabelFor(model => model.DataModel.IdHREmployee, new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.DataModel.IdHREmployee, new SelectList(Model.DDLEmployee, "Key", "Value"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DataModel.IdHREmployee)
                </div>
                <div class="col-md-4 col-sm-4 col-lg-4">
                    @Html.LabelFor(model => model.DataModel.IdLeaveType, new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.DataModel.IdLeaveType, new SelectList(Model.DDLLeaveType, "Key", "Value"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DataModel.IdLeaveType)
                </div>
                <div class="col-md-4 col-sm-4 col-lg-4">
                    @Html.LabelFor(model => model.DataModel.LeaveYearNP, new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.DataModel.LeaveYearNP, new SelectList(Model.DDLYearNp, "Key", "Value"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DataModel.LeaveYearNP)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4 col-sm-4 col-lg-4">
                    @Html.LabelFor(model => model.DataModel.TotalLeave, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.DataModel.TotalLeave, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DataModel.TotalLeave)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 col-sm-12 col-lg-12">
                    @Html.LabelFor(model => model.DataModel.Remarks, new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.DataModel.Remarks, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DataModel.Remarks)
                </div>
            </div>
        </div>
    </div>
</div>