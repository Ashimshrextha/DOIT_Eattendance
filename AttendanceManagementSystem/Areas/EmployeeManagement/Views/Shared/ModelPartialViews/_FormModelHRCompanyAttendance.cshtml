<div class="row">
    <div class="row col-md-12 col-sm-12 col-lg-12 form-group">
        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.IdHrCompany, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.DataModel.IdHrCompany, new SelectList(Model.DDLCompany, "Key", "Value"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.IdHrCompany)
        </div>

        <div class="col-md-3 col-sm-3 col-lg-3 ">
            @Html.LabelFor(model => model.DataModel.IdApprovedBy, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.DataModel.IdApprovedBy, new SelectList(Model.DDLApprovalEmployee, "Key", "Value"), "चयन गर्नुहोस्", new { @class = "form-control d", @readonly = "readonly", @disabled = "disabled", @style = "cursor:pointer" })
            @Html.ValidationMessageFor(model => model.DataModel.IdApprovedBy)
        </div>

        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.IdHREmployee, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.DataModel.IdHREmployee, new SelectList(Model.DDLEmployee, "Key", "Value"), "चयन गर्नुहोस्", new { @class = "form-control", @readonly = "readonly", @disabled = "disabled", @style = "cursor:pointer" })
            @Html.ValidationMessageFor(model => model.DataModel.IdHREmployee)
        </div>


    </div>


    <div class="row col-md-12 col-sm-12 col-lg-12 form-group">
        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.PunchDateNp, new { @class = "control-label" })
            @Model.DataModel.PunchDate.DateNp()
        </div>


        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.PunchTime, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.DataModel.PunchTime, new { @type = "time", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.PunchTime)
        </div>


        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.Remark, new { @class = "control-label col-md-12 col-sm-12 col-lg-12" })
            @Html.TextAreaFor(model => model.DataModel.Remark, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.Remark)
        </div>
    </div>

    <div class="col-md-3 col-sm-3 col-lg-3">
        @Html.LabelFor(model => model.DataModel.IdAttendanceStatus, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.DataModel.IdAttendanceStatus, new SelectList(Model.DDLLeaveStatusType, "Key", "Value"), new { @class = "form-control" })
    </div>











