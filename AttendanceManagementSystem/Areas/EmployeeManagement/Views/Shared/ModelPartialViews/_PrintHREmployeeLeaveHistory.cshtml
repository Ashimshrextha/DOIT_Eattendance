@model SystemViewModels.EmployeeManagement.HREmployeeLeaveHistoryViewModel

<div id="printThis">
    <table style="width: 100%;" aria-describedby="gbox_grid-table" role="grid" id="example" class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>क.संकेत नं.</th>
                <th>कर्मचारीको नाम</th>
                <th class="text-center">विदाको प्रकार </th>
                <th class="ace-icon">आवेदन मिति</th>
                <th class="text-center">शुरुको मिति</th>
                <th class="text-center">अन्तिम मिति</th>
                <th class="text-center">सिफारिस गर्ने</th>
                <th class="text-center">स्वीकृत गर्ने</th>
                <th>बिदाको कारण</th>
                <th>अवस्था</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DBModelList.OrderByDescending(x => x.LeaveValidFromNP))
            {
                <tr>
                    <td class="text-center">@item.HREmployee2.PISNumber</td>
                    <td style="min-width:200px;">@item.HREmployee2.HREmployeeNameNP</td>
                    <td>@item.HRCompanyLeaveType.HRCompanyLeaveTitle</td>
                    <td>@(string.Format("{0:yyyy-MM-dd}", item.CreatedOn.DateNp()))</td>
                    <td>@item.LeaveValidFromNP</td>
                    <td>@item.LeaveValidToNP</td>
                    <td>@(item.HREmployee4 == null ? "" : item.HREmployee4.HREmployeeNameNP)</td>
                    <td>@item.HREmployee1.HREmployeeNameNP</td>
                    <td>@item.LeaveReason</td>
                    <td>@item.HRCompanyLeaveStatusType.LeaveStatusTypeNP</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/printThis.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnPrint').click(function () {
            $('#printThis').printThis();
        });
    });
</script>
