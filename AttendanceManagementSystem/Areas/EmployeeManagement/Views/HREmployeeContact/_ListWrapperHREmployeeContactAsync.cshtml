@model SystemViewModels.EmployeeManagement.HREmployeeContactViewModelList
@using SystemStores.GlobalMethod;
@using SystemStores.ENUMData;
<div class="breadcrumbs ace-save-state" id="breadcrumbs">
    <div class="nav-search" id="nav-search">
        <form class="form-search">
            <span class="input-icon">
                <a class="nav-search-input" href="~/@Model.BreadCrumbBaseURL/_PrintHREmployeeContactAsync?idHREmployee=@Model.IdHREmployee" data-ajax-model="">
                    <i class="ace-icon fa fa-print nav-search-icon">@SystemGlobalMethod.GetButtonText(EnumGlobal.SubmitButtonText.Print)</i>
                </a>
            </span>
            <span class="input-icon">
                <a class="nav-search-input" href="~/@Model.BreadCrumbBaseURL/_ExportHREmployeeContactAsync?idHREmployee=@Model.IdHREmployee">
                    <i class="ace-icon fa fa-file-excel-o nav-search-icon">@SystemGlobalMethod.GetButtonText(EnumGlobal.SubmitButtonText.Export)</i>
                </a>
            </span>
            <span class="input-icon">
                <a class="nav-search-input" href="#" id="Create_HREmployeeContact">
                    <i class="ace-icon fa fa-plus  nav-search-icon">@SystemGlobalMethod.GetButtonText(EnumGlobal.SubmitButtonText.Create)</i>
                </a>
            </span>
        </form>
    </div><!-- /.nav-search -->
</div>
@{ Html.RenderPartial("_ListHREmployeeContactAsync");}
<script type="text/javascript">
    $(function () {
        $.ajaxSetup({ cache: false });
        $('#Create_HREmployeeContact').click(function (e) {
            var url;
			url = '/@Model.BreadCrumbBaseURL' + '/_CreateHREmployeeContactAsync?idHREmployee=' +'@Model.IdHREmployee';
            $('#myModalContent').load(url, function () {
                $('#myModal').modal({
                    keyboard: true
                }, 'show');
                bindAjaxForm(this);
            });
            return false;
        });
    });
</script>
