@model SystemViewModels.Reports.MonthlyAttendanceSummaryViewModelList
@using PagedList.Mvc;


    <div id="replacetarget">
        <div id="content" class="content">
            <div class="dataTables_wrapper">
                <div id="mask-container">
                    <div id="mask"></div>
                    <div class="table-responsive scroll-table">
                        <table style="width: 100%;" aria-describedby="gbox_grid-table" role="grid" id="example" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th colspan="3" class="text-center">कर्मचारीको</th>
                                    <th colspan="7" class="text-center">दिन</th>
                                    <th colspan="5" class="text-center">घण्टा</th>
                                    <th colspan="4" class="text-center"></th>
                                </tr>
                            </thead>
                            <thead>
                                <tr>
                                    <th class="text-center">संकेत नं.</th>
                                    <th style="min-width:200px;">नाम</th>
                                    <th class="ace-icon">पद</th>
                                    <th class="text-center">जम्मा</th>
                                    <th class="text-center">काम गर्ने</th>
                                    <th class="text-center">उपस्थित</th>
                                    <th class="text-center">चेक आउट</th>
                                    <th class="text-center">ढिलो आएको</th>
                                    <th class="text-center">छिटो गएको</th>
                                    <th class="text-center">छिटो आएको</th>
                                    <th class="text-center">काम गर्ने</th>
                                    <th class="text-center">जम्मा काम गरेको</th>
                                    <th class="text-center">विदामा काम गरेको</th>
                                    <th class="text-center">काम गरेको</th>
                                    <th class="text-center">ओटी</th>
                                    <th class="text-center">सप्ताहांत</th>
                                    <th class="text-center">सार्वजनिक विदा</th>
                                    <th class="text-center">काज</th>
                                    <th class="text-center">विदा</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.DBModelList)
                                {
                                    <tr>
                                        <td class="blue ace-icon">
                                            <i class="ace-icon fa bigger-110">@item.PISNumber</i>
                                        </td>
                                        <td>
                                            <a class="blue" href="@Model.BreadCrumbController/_ReadMonthlyAttendanceSummaryAsync?idHRCompany=@Model.IdHRCompany &idHREmployee=@item.IdHREmployee&year=@Model.YearNp&month=@Model.MonthNp" data-ajax-model="">
                                                <i class="fa fa-search-plus bigger-130">
                                                    @(item.EmployeeName)
                                                </i>
                                            </a>
                                        </td>
                                        <td class="ace-icon blue">
                                            <i class="ace-icon fa bigger-110">@item.HRDesignationShortName</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110">@item.TotalDays</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110">@item.TotalWorkingDays</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110">@item.TotalPresent</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110"> @item.TotalCheckout</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110"> @item.TotalLateBy</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110"> @item.TotalCheckOutEarly</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110"> @item.TotalCheckInEarly</i>
                                        </td>

                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110"> @item.TotalWorkingHr</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110"> @item.TotalActualWorkedHr</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110"> @item.TotalWorkedInHoliday</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110">@item.TotalWorkedHr</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110"> @item.TotalOverTime</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110">@item.TotalWeekend</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110">@item.TotalHoliday</i>
                                        </td>

                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110"> @item.TotalKaaj</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110"> @item.TotalLeave</i>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div aria-live="polite" role="status" id="example_info" class="dataTables_info">
                        <div class="row">
                            <div class="col-md-4">Showing @(Model.DBModelList.PageCount < Model.DBModelList.PageNumber ? 0 : Model.DBModelList.FirstItemOnPage) to @Model.DBModelList.LastItemOnPage of @Model.DBModelList.TotalItemCount entries in @Model.DBModelList.PageCount Pages</div>
                            <div class="col-md-8 dataTables_paginate paging_simple_numbers" id="example_paginate">@Html.PagedListPager(Model.DBModelList, page => Url.Action("_ListMonthlyAttendanceSummaryAsync", new { idHRCompany = Model.IdHRCompany, idHRCompanyDivision = Model.IdDivision, idJobStatus = Model.IdJobStatus, idHREmployee = Model.IdHREmployee, year = Model.YearNp, month = Model.MonthNp, pageNumber = page, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection, searchKey = Model.SearchKey }))</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






