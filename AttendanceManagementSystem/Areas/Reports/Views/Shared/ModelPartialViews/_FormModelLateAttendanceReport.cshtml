@model SystemViewModels.Reports.LateAttendanceReportViewModelList
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/RequiredField.js"></script>

@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.PageNumber)
@Html.HiddenFor(model => model.PageSize)
@Html.HiddenFor(model => model.OrderingBy)
@Html.HiddenFor(model => model.OrderingDirection)
@Html.HiddenFor(model => model.SearchKey)
@Html.HiddenFor(model => model.DataModel.Id)
@Html.HiddenFor(model => model.DataModel.AttendanceDate)
@Html.HiddenFor(model => model.DataModel.IdHREmployee)



<div class="col-md-12 col-sm-12 col-lg-12">
    <table class="table table-border table-hover">
        <colgroup>
            <col style="width:24%" />
            <col style="width:1%" />
            <col style="width:75%" />
        </colgroup>
        <tbody>
            <tr>
                <th class="text-right">@Html.Label("कार्यालय", new { @class = "control-label" })</th>
                <th>:</th>
                <td>
                    @Html.DisplayFor(model => model.DBModelEmployee.CompanyNameNP, new { @class = "form-control" })
                </td>
            </tr>
            <tr>
                <th class="text-right">@Html.Label("शाखा/सेक्सन", new { @class = "control-label" })</th>
                <th>:</th>
                <td>
                    @Html.DisplayFor(model => model.DBModelEmployee.HRCompanyDivisionName, new { @class = "form-control" })
                </td>
            </tr>
            <tr>
                <th class="text-right">@Html.Label("पद", new { @class = "control-label" })</th>
                <th>:</th>
                <td>
                    @Html.DisplayFor(model => model.DBModelEmployee.HRDesignationTitle, new { @class = "form-control" })
                </td>
            </tr>
            <tr>
                <th class="text-right"> @Html.Label("कर्मचारी", new { @class = "control-label" })</th>
                <th>:</th>
                <td>
                    @Html.DisplayFor(model => model.DBModelEmployee.HREmployeeNameNP, new { @class = "form-control" })
                </td>
            </tr>
            <tr>
                <th class="text-right"> @Html.LabelFor(model => model.DataModel.AttendanceDate, new { @class = "control-label" })</th>
                <th>:</th>
                <td>
                    @Model.DataModel.AttendanceDate.DateNp()
                </td>
            </tr>
            <tr>
                <th class="text-right"> @Html.LabelFor(model => model.DataModel.LogInTime, new { @class = "control-label" })</th>
                <th>:</th>
                <td>
                    @Html.DisplayFor(model => model.DataModel.LogInTime, new { @class = "form-control", @readonly = "readonly" })
                </td>
            </tr>
            <tr>
                <th class="text-right"> @Html.LabelFor(model => model.DataModel.CheckInTime, new { @class = "control-label" })</th>
                <th>:</th>
                <td>
                    @Html.DisplayFor(model => model.DataModel.CheckInTime, new { @class = "form-control", @readonly = "readonly" })
                </td>
            </tr>
            <tr>
                <th class="text-right"> @Html.LabelFor(model => model.DataModel.LateBy, new { @class = "control-label" })</th>
                <th>:</th>
                <td>
                    @Html.DisplayFor(model => model.DataModel.LateBy, new { @class = "form-control", @readonly = "readonly" })
                </td>
            </tr>
            <tr>
                <th class="text-right"> @Html.LabelFor(model => model.DataModel.LateReason, new { @class = "control-label" })</th>
                <th>:</th>
                <td>
                    @Html.TextAreaFor(model => model.DataModel.LateReason, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DataModel.LateReason)
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th class="text-right">@Html.LabelFor(model => model.DataModel.IdApprovedBy, new { @class = "control-label" })</th>
                <th>:</th>
                <td>
                    @Html.DropDownListFor(model => model.DataModel.IdApprovedBy, new SelectList(Model.DDLApprovalEmployee, "Key", "Value"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DataModel.IdApprovedBy)
                </td>
            </tr>
        </tfoot>
    </table>
</div>
