            $('.r thead').css("left", -$(".r tbody").scrollLeft());
            $('.r thead th:nth-child(2)').css("left", $(".r tbody").scrollLeft());
            $('.r tbody td:nth-child(2)').css("left", $(".r tbody").scrollLeft());
