<script>
    $(document).ready(function () {
        $('.r tbody').scroll(function (e) {
            $('.r thead').css("left", -$(".r tbody").scrollLeft());
            $('.r thead th:nth-child(1)').css("left", $(".r tbody").scrollLeft());
            $('.r tbody td:nth-child(1)').css("left", $(".r tbody").scrollLeft());
        });
    });
</script>
<script>
