@model SystemViewModels.Reports.MonthlyAttendanceReportViewModelList
<style type="text/css">
    table.r {
        border-collapse: collapse;
        width: 100%;
        overflow-x: scroll;
        display: block;
    }

    .r thead {
        background-color: #EFEFEF;
    }

    .r thead,
    .r tbody {
        display: block;
    }

    .r tbody {
        overflow-y: scroll;
        overflow-x: hidden;
        height: calc(50vh)-100px;
    }

    .r th {
        text-transform: uppercase;
    }

    .r td,
    .r th {
        min-width: 70px;
        height: 35px;
        border: dashed 1px lightblue;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 70px;
    }

    .sat {
        background-color: #E5B555;
    }
</style>
<style>
    table.r {
        position: relative;
        background-color: #f3f3f3;
        overflow: hidden;
        border-collapse: collapse;
    }

    .r thead {
        position: relative;
        display: block;
        overflow: visible;
    }

        .r thead th {
            height: 53px;
            border: 1px solid #222;
        }

            .r thead th:nth-child(1) {
                position: relative;
                display: block;
                background-color: #efeff3;
            }

    .r tbody {
        position: relative;
        display: block;
        height: 40em;
        overflow: scroll;
    }

        .r tbody td {
            background-color: #efeff3;
            border: 1px solid #222;
        }

        .r tbody tr td:nth-child(1) {
            position: relative;
            display: block;
            background-color: #efeff3;
        }
</style>
