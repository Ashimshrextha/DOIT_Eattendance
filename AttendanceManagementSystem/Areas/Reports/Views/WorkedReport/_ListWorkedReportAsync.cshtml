@model SystemViewModels.Reports.WorkedReportViewModelList
@using PagedList.Mvc;

<div id="replacetarget">
    <div id="content" class="content">
        <div class="dataTables_wrapper">
            <div id="mask-container">
                <div id="mask"></div>
                <div class="table-responsive scroll-table">
                    <table style="width: 100%;" aria-describedby="gbox_grid-table" role="grid" id="example" class="table table-bordered table-hover table-responsive scroll-table">
                        <thead>
                            <tr>
                                <th class="text-center">क.संकेत नं.</th>
                                <th>कर्मचारीको नाम</th>
                                <th class="ace-icon">पद</th>
                                <th class="text-center">मिति</th>
                                <th class="text-center">आउने समय</th>
                                <th class="text-center">जाने समय</th>
                                <th class="text-center">आएको समय</th>
                                <th class="text-center">गएको समय</th>
                                <th class="text-center">काम गर्ने</th>
                                <th class="text-center">काम गरेको </th>
                                <th class="text-center">ओटी</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DBModelList)
                            {
                                <tr>
                                    <td class="text-center">
                                        <i class="ace-icon fa bigger-110">@item.IdEnroll</i>
                                    </td>
                                    <td class="blue">
                                        <i class="ace-icon fa bigger-130">@item.HREmployeeNameNP</i>
                                    </td>
                                    <td class="ace-icon">
                                        <i class="ace-icon fa bigger-110">@item.HRDesignationShortName</i>
                                    </td>
                                    <td class="green ace-icon">
                                        <i class="ace-icon fa bigger-110">@item.AttendanceDate.DateNp()</i>
                                    </td>
                                    <td class="green ace-icon">
                                        <i class="ace-icon fa bigger-110">@item.LogInTime</i>
                                    </td>
                                    <td class="red ace-icon"> <i class="ace-icon fa bigger-110">@item.LogOutTime</i></td>
                                    <td class="text-center">@item.CheckInTime</td>
                                    <td class="text-center">@item.CheckOutTime</td>
                                    <td class="text-center">@item.TotalWorkingInMin</td>
                                    <td class="text-center">@item.TotalWorkedInMin</td>
                                    <td class="text-center">@item.TotalOverTimeInMin</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div aria-live="polite" role="status" id="example_info" class="dataTables_info">
                    <div class="row">
                        <div class="col-md-4">Showing @(Model.DBModelList.PageCount < Model.DBModelList.PageNumber ? 0 : Model.DBModelList.FirstItemOnPage) to @Model.DBModelList.LastItemOnPage of @Model.DBModelList.TotalItemCount entries in @Model.DBModelList.PageCount Pages</div>
                        <div class="col-md-8 dataTables_paginate paging_simple_numbers" id="example_paginate">@Html.PagedListPager(Model.DBModelList, page => Url.Action("_ListWorkedReportAsync", new { idHRCompany = Model.IdHRCompany, idHRCompanyDivision = Model.IdDivision, idJobStatus=Model.IdJobStatus, idHREmployee = Model.IdHREmployee, date = Model.Date, pageNumber = page, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection, searchKey = Model.SearchKey }))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






