@model SystemViewModels.CompanyManagement.HRCompanySystemSupportViewModelList
@using PagedList.Mvc;
<div id="replacetarget">
    <div id="content" class="content">
        <div class="dataTables_wrapper">
            <div id="mask-container">
                <div id="mask"></div>
                <div class="table-responsive">
                    <table style="width: 100%;" aria-describedby="gbox_grid-table" role="grid" id="example" class="table table-bordered table-hover table-responsive">
                        <thead>
                            <tr>
                                <th class="ace-icon">कार्यालय कोड</th>
                                <th class="ace-icon">कार्यालय</th>
                                <th>सम्पर्क व्यक्ति</th>
                                <th class="ace-icon">मोबाइल</th>
                                <th class="ace-icon">फोन नं.</th>
                                <th class="ace-icon">ईमेल</th>
                                <th class="text-center">अवस्था</th>
                                <th class="ace-icon">कार्य</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DBModelList)
                            {
                                <tr>
                                    <td class="ace-icon">
                                        <i class="ace-icon fa badge badge-yellow bigger-110">@item.HRCompany.HRCompanyCode.HRCompanyCodeTitle</i>
                                    </td>
                                    <td class="blue">
                                        <i class="ace-icon fa bigger-150">@item.HRCompany.CompanyNameNP</i>
                                    </td>
                                    <td class="green">
                                        <i class="ace-icon fa bigger-150">@item.ContactPerson</i>
                                    </td>
                                    <td class="ace-icon">@item.MobileNumber</td>
                                    <td class="ace-icon">@item.PhoneNumber</td>
                                    <td class="ace-icon">@item.Email</td>
                                    <td class="ace-icon">
                                        <div>
                                            <i class="ace-icon @(item.IsActive==true?"fa fa-thumbs-up green":"fa fa-thumbs-down red") bigger-130" aria-hidden="true"></i>
                                        </div>
                                    </td>
                                    <td class="ace-icon action-buttons">
                                        @if (Model.SessionDetails.IdHRCompany == item.IdHRCompany && Model.SessionDetails.IdRoleType == 1 || Model.SessionDetails.IdRoleType == 0)
                                        {
                                            <a href="@Url.Action("_UpdateHRCompanySystemSupportAsync",new { id=item.Id,pageNumber=Model.PageNumber,pageSize=Model.PageSize,orderingBy=Model.OrderingBy,orderingDirection=Model.OrderingDirection,searchKey=Model.SearchKey})" data-ajax-model="">
                                                <i class="ace-icon fa fa-pencil green bigger-150" aria-hidden="true" title="Edit"></i>
                                            </a>
                                            <a href="@Url.Action("_ReadHRCompanySystemSupportAsync",new { id=item.Id,pageNumber=Model.PageNumber,pageSize=Model.PageSize,orderingBy=Model.OrderingBy,orderingDirection=Model.OrderingDirection,searchKey=Model.SearchKey})" data-ajax-model=""><i class="ace-icon fa fa-search-plus blue bigger-150" aria-hidden="true" title="View"></i></a>
                                            <a href="@Url.Action("_DeleteHRCompanySystemSupportAsync",new { id=item.Id,pageNumber=Model.PageNumber,pageSize=Model.PageSize,orderingBy=Model.OrderingBy,orderingDirection=Model.OrderingDirection,searchKey=Model.SearchKey})" data-ajax-model=""><i class="ace-icon fa fa-trash-o red bigger-150" aria-hidden="true" title="Delete"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <div aria-live="polite" role="status" id="example_info" class="dataTables_info">
                    <div class="row">
                        <div class="col-md-4">Showing @(Model.DBModelList.PageCount < Model.DBModelList.PageNumber ? 0 : Model.DBModelList.FirstItemOnPage) to @Model.DBModelList.LastItemOnPage of @Model.DBModelList.TotalItemCount entries in @Model.DBModelList.PageCount Pages</div>
                        <div class="col-md-8 dataTables_paginate paging_simple_numbers" id="example_paginate">@Html.PagedListPager(Model.DBModelList, page => Url.Action("_ListHRCompanySystemSupportAsync", new { pageNumber = page, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection, searchKey = Model.SearchKey }))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

