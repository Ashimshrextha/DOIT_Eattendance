@model SystemViewModels.CompanyManagement.HREmployeeBulkAttendanceViewModelList
@using PagedList.Mvc;
<div id="replacetarget">
    <div id="content" class="content">
        <div class="dataTables_wrapper">
            <div id="mask-container">
                <div id="mask"></div>
                <div class="table-responsive">
                    <table style="width: 100%;" aria-describedby="gbox_grid-table" role="grid" id="example" class="table table-bordered table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>आईडी</th>
                                <th>फाइलको नाम</th>
                                <th>अनुरोध गर्नेको नाम</th>
                                <th class="text-center">डाउनलोड</th>
                                <th class="ace-icon">अनुरोध गरेको मिति</th>
                                <th class="ace-icon">टिप्पणी</th>
                                @*<th class="ace-icon">कार्य</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @{ var sn = 0;}
                            @foreach (var item in Model.DBModelManualList)
                            {
                            <tr>
                                <td>@(++sn)</td>
                                <td>@item.FileName</td>
                                <td>@item.Name</td>
                                <td class="ace-icon action-buttons">
                                    @if (item.FolderName != null && item.FileName != null)
                                    {
                                        <i class="fa bigger-110 badge badge-danger">
                                            <a href="/@Model.BreadCrumbController/DownloadFile?FolderName=@item.FolderName&FileName=@item.FileName">
                                                <i class="ace-icon fa fa-download green bigger-150" aria-hidden="true" title="Download"></i>
                                            </a>
                                        </i>
                                    }
                                </td>
                                <td class="ace-icon">@item.CreatedOn</td>
                                <td class="ace-icon">@item.Remarks</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div aria-live="polite" role="status" id="example_info" class="dataTables_info">
                    <div class="row">
                        @*<div class="col-md-4">Showing @(Model.DBModelList.PageCount < Model.DBModelList.PageNumber ? 0 : Model.DBModelList.FirstItemOnPage) to @Model.DBModelList.LastItemOnPage of @Model.DBModelList.TotalItemCount entries in @Model.DBModelList.PageCount Pages</div>
                        <div class="col-md-8 dataTables_paginate paging_simple_numbers" id="example_paginate">@Html.PagedListPager(Model.DBModelList, page => Url.Action("_ListHREmployeeAwardAndAchivementAsync", new { idHREmployee = Model.IdHREmployee, pageNumber = page, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection, searchKey = Model.SearchKey }))</div>*@
                        <div class="col-md-4">Showing @(Model.DBModelManualList.PageCount < Model.DBModelManualList.PageNumber ? 0 : Model.DBModelManualList.FirstItemOnPage) to @Model.DBModelManualList.LastItemOnPage of @Model.DBModelManualList.TotalItemCount entries in @Model.DBModelManualList.PageCount Pages</div>
                        <div class="col-md-8 dataTables_paginate paging_simple_numbers" id="example_paginate">@Html.PagedListPager(Model.DBModelManualList, page => Url.Action("_ListHREmployeeAwardAndAchivementAsync", new { idHREmployee = Model.IdHREmployee, pageNumber = page, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection, searchKey = Model.SearchKey }))</div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


