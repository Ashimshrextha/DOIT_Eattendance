@model SystemViewModels.SystemSetting.HREmployeeServiceTypeViewModelList
@using PagedList.Mvc;
<div id="replacetarget">
    <div id="content" class="content">
        <div class="dataTables_wrapper">
            <div id="mask-container">
                <div id="mask"></div>
                <table style="width: 100%;" aria-describedby="gbox_grid-table" role="grid" id="example" class="table table-bordered table-hover table-responsive">
                    <thead>
                        <tr>
                            <th class="text-center">आईडी</th>
                            <th class="ace-icon">कार्या.कोड</th>
                            <th>सेवा प्रकार</th>
                            <th class="ace-icon">संक्षिप्त</th>
                            <th class="text-center">अनुक्रम गर्ने</th>
                            <th class="text-center">अवस्था</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DBModelList)
                        {
                            <tr>
                                <td class="text-center">@item.Id</td>
                                <td class="text-center">
                                    <i class="fa bigger-110 badge badge-yellow">@item.HRCompany.HRCompanyCode.HRCompanyCodeTitle</i>
                                </td>
                                <td class="blue">
                                    <i class="fa bigger-110">@item.HREmployeeServiceTypeTitle</i>
                                </td>
                                <td class="text-center">
                                    <i class="fa bigger-110 badge badge-yellow">@item.HREmployeeServiceTypeShortName</i>
                                </td>
                                <td class="text-center">
                                    <i class="fa bigger-110 badge badge-info">@item.HREmployeeServiceTypeOrder</i>
                                </td>

                                <td class="ace-icon">
                                    <div>
                                        <i class="ace-icon @(item.IsActive==true?"fa fa-thumbs-up green":"fa fa-thumbs-down red") bigger-130" aria-hidden="true"></i>
                                    </div>
                              
                            </tr>
                        }
                    </tbody>
                </table>
                <div aria-live="polite" role="status" id="example_info" class="dataTables_info">
                    <div class="row">
                        <div class="col-md-4">Showing @(Model.DBModelList.PageCount < Model.DBModelList.PageNumber ? 0 : Model.DBModelList.FirstItemOnPage) to @Model.DBModelList.LastItemOnPage of @Model.DBModelList.TotalItemCount entries in @Model.DBModelList.PageCount Pages</div>
                        <div class="col-md-8 dataTables_paginate paging_simple_numbers" id="example_paginate">@Html.PagedListPager(Model.DBModelList, page => Url.Action("_ListHREmployeeServiceTypeAsync", new { idHRCompany = Model.IdHRCompany, pageNumber = page, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection, searchKey = Model.SearchKey }))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




