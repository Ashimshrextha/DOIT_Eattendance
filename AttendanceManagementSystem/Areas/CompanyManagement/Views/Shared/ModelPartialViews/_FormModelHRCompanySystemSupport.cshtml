@model SystemViewModels.CompanyManagement.HRCompanySystemSupportViewModel
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/RequiredField.js"></script>
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.DataModel.Id)
@Html.HiddenFor(model => model.PageNumber)
@Html.HiddenFor(model => model.PageSize)
@Html.HiddenFor(model => model.OrderingBy)
@Html.HiddenFor(model => model.OrderingDirection)
@Html.HiddenFor(model => model.SearchKey)
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <table class="table table-border table-hover">
            <colgroup>
                <col style="width:10%" />
                <col style="width:1%" />
                <col style="width:39%" />
                <col style="width:14%" />
                <col style="width:1%" />
                <col style="width:35%" />
            </colgroup>
            <tbody>
                <tr>
                    <th class="text-right">@Html.LabelFor(model => model.DataModel.IdHRCompany, new { @class = "control-label" })</th>
                    <th>:</th>
                    <th>
                        @Html.DropDownListFor(model => model.DataModel.IdHRCompany, new SelectList(Model.DDLCompany, "Key", "Value"), new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DataModel.IdHRCompany)
                    </th>
                    <th class="text-right">@Html.LabelFor(model => model.DataModel.ContactPerson, new { @class = "control-label" })</th>
                    <th>:</th>
                    <th>
                        @Html.TextBoxFor(model => model.DataModel.ContactPerson, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DataModel.ContactPerson)
                    </th>
                </tr>
                <tr>
                    <th class="text-right">@Html.LabelFor(model => model.DataModel.MobileNumber, new { @class = "control-label" })</th>
                    <th>:</th>
                    <th>
                        @Html.TextBoxFor(model => model.DataModel.MobileNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DataModel.MobileNumber)
                    </th>
                    <th class="text-right">@Html.LabelFor(model => model.DataModel.PhoneNumber, new { @class = "control-label" })</th>
                    <th>:</th>
                    <th>
                        @Html.TextBoxFor(model => model.DataModel.PhoneNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DataModel.PhoneNumber)
                    </th>
                </tr>
                <tr>
                    <th class="text-right">@Html.LabelFor(model => model.DataModel.Email, new { @class = "control-label" })</th>
                    <th>:</th>
                    <th>
                        @Html.TextBoxFor(model => model.DataModel.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DataModel.Email)
                    </th>
                    <th class="text-right">@Html.LabelFor(model => model.DataModel.IsActive, new { @class = "control-label" })</th>
                    <th>:</th>
                    <th>
                        @Html.CheckBoxFor(model => model.DataModel.IsActive, new { @class = "BSswitch" })
                        @Html.ValidationMessageFor(model => model.DataModel.IsActive)
                    </th>
                </tr>
                <tr>
                    <th class="text-right">@Html.LabelFor(model => model.DataModel.Remark, new { @class = "control-label" })</th>
                    <th>:</th>
                    <th>
                        @Html.TextAreaFor(model => model.DataModel.Remark, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DataModel.Remark)
                    </th>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<script>
    $('select').select2({
        width: '100%',
        dropdownAutoWidth: true
    });
</script>