@model SystemViewModels.CompanyManagement.HRCompanyAttendanceViewModel
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/RequiredField.js"></script>
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.DataModel.Id)
@Html.HiddenFor(model => model.PageNumber)
@Html.HiddenFor(model => model.PageSize)
@Html.HiddenFor(model => model.OrderingBy)
@Html.HiddenFor(model => model.OrderingDirection)
@Html.HiddenFor(model => model.SearchKey)
@Html.HiddenFor(model => model.DataModel.Document)
@Html.HiddenFor(model => model.DataModel.FolderName)
@Html.HiddenFor(model => model.DataModel.PunchDate)

<div class="row">
    <div class="row col-md-12 col-sm-12 col-lg-12 form-group">
        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.IdHrCompany, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.DataModel.IdHrCompany, new SelectList(Model.DDLCompany, "Key", "Value"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.IdHrCompany)
        </div>
        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.IdHREmployee, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.DataModel.IdHREmployee, new SelectList(Model.DDLEmployee, "Key", "Value"), "चयन गर्नुहोस्", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.IdHREmployee)
        </div>
        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.IdApprovedBy, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.DataModel.IdApprovedBy, new SelectList(Model.DDLApprovalEmployee, "Key", "Value"), "चयन गर्नुहोस्", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.IdApprovedBy)
        </div>



    </div>




    <div class="row col-md-12 col-sm-12 col-lg-12 form-group">
        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.PunchDateNp, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.DataModel.PunchDateNp, new { @class = "form-control ", @readonly = "readonly", @style = "cursor:pointer" })
            @Html.ValidationMessageFor(model => model.DataModel.PunchDateNp)
        </div>


        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.PunchTime, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.DataModel.PunchTime, new { @type = "time", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.PunchTime)
        </div>


        <div class="col-md-3 col-sm-3 col-lg-3">
            @Html.LabelFor(model => model.DataModel.Remark, new { @class = "control-label col-md-12 col-sm-12 col-lg-12" })
            @Html.TextAreaFor(model => model.DataModel.Remark, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.Remark)
        </div>
    </div>













</div>



<script type="text/javascript">
    $(document).ready(function () {
        $('#DataModel_PunchDateNp').nepaliDatePicker({
            npdMonth: true,
            npdYear: true,
            onChange: function () {
                $('#DataModel_PunchDate').val(BS2AD($('#DataModel_PunchDateNp').val()));
            }
        });
    });
</script>




<script>
    $('select').select2({
        width: '100%',
        dropdownAutoWidth: true
    });
</script>

















