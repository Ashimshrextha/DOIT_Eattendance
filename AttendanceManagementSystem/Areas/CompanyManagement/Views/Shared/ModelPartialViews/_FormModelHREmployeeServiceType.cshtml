@model SystemViewModels.SystemSetting.HREmployeeServiceTypeViewModel
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/RequiredField.js"></script>
@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.DataModel.Id)
@Html.HiddenFor(model => model.PageNumber)
@Html.HiddenFor(model => model.PageSize)
@Html.HiddenFor(model => model.OrderingBy)
@Html.HiddenFor(model => model.OrderingDirection)
@Html.HiddenFor(model => model.SearchKey)




<div class="col-md-12 col-lg-12 col-sm-12">
    <div class="row form-group">
        <div class="col-md-4 col-sm-4 col-lg-4">
            @Html.LabelFor(model => model.DataModel.IdHRCompany, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.DataModel.IdHRCompany, new SelectList(Model.DDLCompany, "Key", "Value"), new { @class = "form-control", @readonly = "Readonly" })
            @Html.ValidationMessageFor(model => model.DataModel.IdHRCompany)
        </div>
        <div class="col-md-4 col-sm-4 col-lg-4">
            @Html.LabelFor(model => model.DataModel.HREmployeeServiceTypeTitle, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.DataModel.HREmployeeServiceTypeTitle, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.HREmployeeServiceTypeTitle)
        </div>
        <div class="col-md-4 col-sm-4 col-lg-4">
            @Html.LabelFor(model => model.DataModel.HREmployeeServiceTypeShortName, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.DataModel.HREmployeeServiceTypeShortName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.HREmployeeServiceTypeShortName)
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4 col-sm-4 col-lg-4">
            @Html.LabelFor(model => model.DataModel.HREmployeeServiceTypeOrder, new { @class = "control-label col-md-12 col-lg-12 col-sm-12" })
            @Html.TextBoxFor(model => model.DataModel.HREmployeeServiceTypeOrder, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DataModel.HREmployeeServiceTypeOrder)
        </div>
        <div class="col-md-4 col-sm-4 col-lg-4">
            @Html.LabelFor(model => model.DataModel.IsPermanentServiceType, new { @class = "control-label col-md-12 col-lg-12 col-sm-12" })
            @Html.CheckBoxFor(model => model.DataModel.IsPermanentServiceType, new { @class = "form-control BSswitch" })
            @Html.ValidationMessageFor(model => model.DataModel.IsPermanentServiceType)
        </div>
        <div class="col-md-4 col-sm-4 col-lg-4">
            @Html.LabelFor(model => model.DataModel.IsActive, new { @class = "control-label col-md-12 col-lg-12 col-sm-12" })
            @Html.CheckBoxFor(model => model.DataModel.IsActive, new { @class = "form-control BSswitch" })
            @Html.ValidationMessageFor(model => model.DataModel.IsActive)
        </div>
    </div>
</div>

