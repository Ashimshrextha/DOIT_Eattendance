@model SystemViewModels.SystemAuthentication.ChangePasswordViewModel
@using SystemStores.ENUMData;
@using SystemStores.GlobalMethod;
<script src="~/Scripts/jquery.form.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/RequiredField.js"></script>
<script src="~/Scripts/CustomScript.js"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content" id="content">
    <div class="modal-header">
        @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>*@
        <h4 class="modal-title" id="myModalLabel">पासवर्ड परिवर्तन गर्नुहोस्</h4>
    </div>
    @using (Html.BeginForm("ChangePassword", "Account", null, FormMethod.Post, new { name = "ajaxForm", id = "ajaxForm", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.UserModel.UserName)
        <div class="modal-body maxheight">
            <section>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img class="center-block img-circle img-responsive img-thumbnail" src="@Model.UserModel.ImageName" alt="user-profile" height="100" width="100" />
                                <h4 class="text-center" style="font-size:16px;margin-top:0px">
                                    @Html.DisplayFor(model => model.UserModel.Name)
                                </h4>
                                <h5 class="text-center">
                                    @Model.UserModel.UserName
                                </h5>
                                <hr />
                                <strong>आईडी</strong>
                                <p class="text-muted">@Model.UserModel.IdHREmployee</p>
                                <strong>कर्मचारी संकेत नं.</strong>
                                <p class="text-muted">@Model.UserModel.IdEnroll</p>
                                <strong>मोबाइल</strong>
                                <p class="text-muted">@Model.UserModel.Mobile</p>
                                <strong>
                                    इमेल
                                </strong>
                                <p class="text-muted">@Model.UserModel.Email</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="col-lg-12 col-md-12 cl-sm-12">
                                    <div class="form-group row">
                                        <div class="col-md-6 col-sm-6 col-lg-6">
                                            @Html.LabelFor(model => model.CurrentPassword, new { @class = "control-label" })
                                            @Html.PasswordFor(model => model.CurrentPassword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.CurrentPassword)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 cl-sm-12">
                                    <div class="form-group row">
                                        <div class="col-md-6 col-sm-6 col-lg-6">
                                            @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                                            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Password)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 cl-sm-12">
                                    <div class="form-group row">
                                        <div class="col-md-6 col-sm-6 col-lg-6">
                                            @Html.LabelFor(model => model.RePassword, new { @class = "control-label" })
                                            @Html.PasswordFor(model => model.RePassword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.RePassword)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="modal-footer">
         <a href="~/home/index"> <button id="btnCancel" class="btn btn-danger btn-app btn-sm" type="button" data-dismiss="modal">@SystemGlobalMethod.GetButtonText(EnumGlobal.SubmitButtonText.Cancel)</button></a>
            <input id="btnSubmit" class="btn btn-app btn-success btn-sm" type="submit" value="@SystemGlobalMethod.GetButtonText(EnumGlobal.SubmitButtonText.Submit)" />
        </div>
    }
</div>