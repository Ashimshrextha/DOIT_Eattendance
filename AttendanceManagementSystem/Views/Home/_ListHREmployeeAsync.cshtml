@model SystemViewModels.Home.HomeDashboardViewModelList
    @using PagedList.Mvc;

    <div id="replacetarget">
        <div id="content" class="content">
            <div class="dataTables_wrapper">
                <div id="mask-container">
                    <div id="mask"></div>
                    <div class="table-responsive">
                        <table style="width: 100%;" aria-describedby="gbox_grid-table" role="grid" id="example" class="table table-bordered table-hover table-responsive">
                            <thead>
                                <tr>
                                    <th class="text-center">आईडी</th>
                                    <th class="text-center">कार्या.कोड</th>
                                    <th class="text-center">कर्मचारी नं.</th>
                                    <th class="text-center">पद</th>
                                    <th class="text-center">पुरा नाम</th>
                                    <th class="text-center">देवनागरी</th>
                                    <th class="text-center">लिङ्ग</th>
                                    <th class="text-center">शाखा/सेक्सन</th>
                                    <th class="text-center">मोबाइल</th>
                                    <th class="text-center">अवस्था</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.DBModelEmp)
                                {
                                    <tr>
                                        <td class="text-center">@item.Id</td>
                                        <td class="ace-icon">
                                            <i class="ace-icon fa bigger-110 badge badge-yellow">@item.HRCompanyCodeTitle</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110 badge badge-grey">@item.IdEnroll</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110 badge badge-yellow">@item.HRDesignationShortName</i>
                                        </td>
                                        <td>
                                            <a class="@(item.HREmployeeSexTitle=="Male"?"green":"blue")">
                                                <i class="ace-icon fa bigger-130">
                                                    @(item.HREmployeeName)
                                                </i>
                                            </a>
                                        </td>
                                        <td class="@(item.HREmployeeSexTitle=="Male"?"green":"blue")">
                                            <i class="ace-icon fa bigger-130">@item.HREmployeeNameNP</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="ace-icon fa bigger-110 badge @(item.HREmployeeSexTitle=="Male"?"badge-success":"badge-info")">@item.HREmployeeSexTitle</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="fa bigger-110 badge badge-yellow">@item.HRCompanyDivisionShortName</i>
                                        </td>
                                        <td class="text-center">
                                            <i class="fa bigger-110 badge badge-grey">@item.MobileNumber</i>
                                        </td>
                                        <td class="ace-icon">
                                            <div>
                                                <i class="ace-icon @(item.IsActive==true?"fa fa-thumbs-up green":"fa fa-thumbs-down red") bigger-130" aria-hidden="true"></i>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div aria-live="polite" role="status" id="example_info" class="dataTables_info">
                        <div class="row">
                            <div class="col-md-4">Showing @(Model.DBModelEmp.PageCount < Model.DBModelEmp.PageNumber ? 0 : Model.DBModelEmp.FirstItemOnPage) to @Model.DBModelEmp.LastItemOnPage of @Model.DBModelEmp.TotalItemCount entries in @Model.DBModelEmp.PageCount Pages</div>
                            <div class="col-md-8 dataTables_paginate paging_simple_numbers" id="example_paginate">@Html.PagedListPager(Model.DBModelEmp, page => Url.Action("_ListHREmployeeAsync", new { pageNumber = page, pageSize = Model.PageSize, orderingBy = Model.OrderingBy, orderingDirection = Model.OrderingDirection, searchKey = Model.SearchKey }))</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

